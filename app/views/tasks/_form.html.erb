<%= form_with(model: task, class: "mb-7 grid grid-cols-3 gap-4 items-end") do |form| %>
  <div class="col-span-2">
    <%= form.text_field :description, placeholder: "Add new task", class: "w-full px-3 py-2 mt-2 shadow rounded-md border border-gray-200 outline-none" %>
  </div>
  <div>
    <%= form.submit "Save", class: "btn py-2 bg-blue-600 text-white w-full" %>
  </div>
<% end %>
